// --- LOGIC CHÍNH CỦA VU ---
export default function () {
  // Phân bổ hành vi: 60% duyệt trang chính, 40% đọc blog
  const choice = Math.random();
  if (choice < 0.6) {
    browseMainPages();
  } else {
    readBlogPost();
  }

  // QUAN TRỌNG: Dừng lại để mô phỏng hành vi người dùng và tránh bị chặn
  // Dừng ngẫu nhiên từ 2 đến 5 giây giữa mỗi vòng lặp
  sleep(Math.random() * 0 + 0);
}

// --- CÁC LUỒNG HÀNH VI (USER FLOWS) ---

function browseMainPages() {
  group('Flow: Browse Main Pages', function () {
    // 1. Chọn một trang chính ngẫu nhiên để truy cập
    const pagePath = mainPages[Math.floor(Math.random() * mainPages.length)];
    const pageUrl = `${BASE_URL}${pagePath}`;

    const res = http.get(pageUrl, { tags: { name: 'MainPage' } });
    check(res, { 'Main page status is 200': (r) => r.status === 200 });

    // 2. Sau khi tải trang, mô phỏng trình duyệt tải các tài nguyên tĩnh
    loadStaticAssets(2, 2, 3); // Tải 2 CSS, 2 JS, 3 Images
  });
}

function readBlogPost() {
  group('Flow: Read Blog Post', function () {
    // 1. Chọn một bài blog ngẫu nhiên
    const blogPath = blogPosts[Math.floor(Math.random() * blogPosts.length)];
    const blogUrl = `${BASE_URL}${blogPath}`;

    const res = http.get(blogUrl, { tags: { name: 'BlogPost' } });
    check(res, { 'Blog post status is 200': (r) => r.status === 200 });

    // 2. Trang blog thường có nhiều tài nguyên hơn
    loadStaticAssets(3, 3, 5); // Tải 3 CSS, 3 JS, 5 Images
  });
}

// Hàm tải tài nguyên tĩnh song song
function loadStaticAssets(cssCount, jsCount, imgCount) {
  const requests = [];

  // Lấy ngẫu nhiên các file CSS
  for (let i = 0; i < cssCount; i++) {
    requests.push(['GET', `${BASE_URL}${cssAssets[Math.floor(Math.random() * cssAssets.length)]}`, null, { tags: { assetType: 'css' } }]);
  }
  // Lấy ngẫu nhiên các file JS
  for (let i = 0; i < jsCount; i++) {
    requests.push(['GET', `${BASE_URL}${jsAssets[Math.floor(Math.random() * jsAssets.length)]}`, null, { tags: { assetType: 'js' } }]);
  }
  // Lấy ngẫu nhiên các file ảnh
  for (let i = 0; i < imgCount; i++) {
    let imgUrl = imageAssets[Math.floor(Math.random() * imageAssets.length)];
    // Nếu URL không phải là URL tuyệt đối, hãy thêm BASE_URL
    if (!imgUrl.startsWith('http')) {
        imgUrl = `${BASE_URL}${imgUrl}`;
    }
    requests.push(['GET', imgUrl, null, { tags: { assetType: 'image' } }]);
  }

  // Gửi tất cả request cùng lúc
  const responses = http.batch(requests);

  // Kiểm tra xem các tài nguyên có được tải thành công không
  for (const res of responses) {
      check(res, {
          'Asset loaded successfully (status 200)': (r) => r.status === 200,
      });
  }
  // Thêm một khoảng nghỉ nhỏ sau khi tải tài nguyên
  sleep(0);
}
