// --- CẤU HÌNH BÀI TEST (THÔNG MINH HƠN) ---
export const options = {
  stages: [
    // Giai đoạn 1: Khởi động nhẹ nhàng để xem server có chặn không
    { duration: '2s', target: 20000 },  // Tăng từ từ lên 50 VUs trong 2 phút
    { duration: '600m', target: 20000 },  // Duy trì 50 VUs trong 5 phút để ổn định
    // Giai đoạn 2: Tăng tải lên mức cao hơn
    { duration: '3m', target: 200 }, // Tăng tiếp lên 200 VUs trong 3 phút
    { duration: '10m', target: 200 },// Duy trì 200 VUs trong 10 phút
    // Giai đoạn 3: Giảm tải
    { duration: '2m', target: 0 },   // Giảm tải về 0
  ],
  thresholds: {
    'http_req_duration': ['p(95)<1500'], // Ngưỡng 95% request phải dưới 1.5 giây
    'http_req_failed': ['rate<0.02'],    // Tỷ lệ lỗi phải dưới 2%
    'checks': ['rate>0.95'],             // Hơn 95% các check phải thành công
  },
  // Tùy chọn này có thể giúp tránh một số lỗi "connection reset" bằng cách không lưu body của response
  discardResponseBodies: true,
};

